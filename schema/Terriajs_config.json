{
  "type": "object",
  "title": "Terria server configuration",
  "required": [
    "initializationUrls","parameters"
  ],
  "default": [
    "initializationUrls","parameters"
  ],
  "properties":{
    "initializationUrls":{
      "type":"array",
      "items":{
        "type":"string",
        "format":"table"
      }
    },
    "parameters":{
      "type":"object",
      "required": [
        "appName"
      ],
      "properties":{
          "appName": {
            "title": "Application name",
            "type": "string",
            "description": "Terria project"
          },
          "googleUrlShortenerKey": {
            "title": "Google url shortener key",
            "type": "string",
            "description": ""
          },
          "googleAnalyticsKey": {
            "title": "Google Analytics key",
            "type": "string",
            "description": "GA key"
          },
          "googleAnalyticsOptions": {
            "title": "Google Analytics Options",
            "type": "string",
            "description": "Google Analytics Options"
          },
          "bingMapsKey": {
            "title": "Google Analytics Options",
            "type": "string",
            "description": "Google Analytics Options"
          },
          "disclaimer": {
            "title": "Google Analytics Options",
            "type": "object",
            "description": "Google Analytics Options",
            "properties": {
              "text": {
                "title": "Disclaimer",
                "type": "string",
                "description": "Disclaimer"
              },
              "url": {
                "title": "Disclaimer URL",
                "type": "string",
                "description": "Disclaimer URL"
              }
            }
          },
          "globalDisclaimer": {
            "title": "Disclaimer",
            "type": "object",
            "description": "Pop-up disclaimer that will be shown at the start. The text of the disclaimer is in lib/Views/GlobalDisclaimer.html",
            "properties": {
              "text": {
                "title": "Disclaimer",
                "type": "string",
                "description": "Disclaimer"
              },
              "title": {
                "title": "Title",
                "type": "string",
                "description": "Title"
              },
              "confirmationRequired": {
                "type": "boolean"
              },
              "buttonTitle": {
                "type":"string",
                "title": "button title"
              }
            }
          },
          "brandBarElements": {
            "type":"array",
            "items":{
              "type":"string",
              "format":"table"
            },
            "description":"See comments in lib/Views/global.scss for further information about customising colors, logos, fonts etc."
          },
          "supportEmail": {
            "title": "Support email",
            "type": "string",
            "description": "Shown when things go wrong."
          },
          "proj4ServiceBaseUrl": {
            "title": "proj service BaseUrl",
            "type": "string",
            "description": "You probably shouldn't change this.",
            "default": "proj4def/"
          },
          "feedbackUrl": {
            "title": "Feedback url",
            "type": "string",
            "description": "",
            "default": "https://api.data.apps.fao.org/api/v1/map/feedback"
          },
          "mobileDefaultViewerMode": {
            "title": "Mobile default viewer mode",
            "type": "string",
            "description": "Default mobile viewer mode when loading the map for the first time on mobile platforms. Options are: 3DTerrain, 3DSmooth, 2D",
            "default": "2d"
          },
          "experimentalFeatures": {
            "title": "Experimental features",
            "type": "boolean",
            "description": "Enable experimental features, since its nice to have the bleeding edge. Disable it if things go wrong with the experimental features or your users aren't robust to features which might change or disapear completly.",
            "default": true
          },
          "tabbedCatalog": {
            "title": "Tabbed catalog",
            "type": "boolean",
            "description": "",
            "default": true
          },
          "cesiumIonAccessToken": {
            "title": "Cecium Ion Access token",
            "type": "string",
            "description": "",
            "default": ""
          },
          "useCesiumIonBingImagery": {
            "title": "Use Cesium Ion Bing Imagery",
            "type": "boolean",
            "description": "",
            "default": true
          },
          "regionMappingDefinitionsUrl": {
            "title": "Region Mapping Definitions url",
            "type": "string",
            "description": "To override TerriaJS's region mapping file with a local one.",
            "default": "data/region.json"
          },
          "showWelcomeMessage": {
            "title": "Show welcome message",
            "type": "boolean",
            "description": "True to display welcome message on startup.",
            "default": false
          },
          "showInAppGuides": {
            "title": "Show in app guides",
            "type": "boolean",
            "description": "True to display in-app guides.",
            "default": false
          },
          "showFeaturePrompts": {
            "title": "New feature popups",
            "type": "boolean",
            "description": "True to display new feature popups.",
            "default": false
          },
          "aboutUrl": {
            "title": "About url",
            "type": "string",
            "description": "",
            "default": ""
          }
      }
    }
  }
}
