{
  "type": "object",
  "required": [
    "type",
    "name",
    "description",
    "id"
  ],
  "properties": {
    "type": {
      "title": "Type of Resource",
      "type": "string",
      "enum": [
        "csv"
      ]
    },
    "description": {
      "title": "Description",
      "type": "string",
      "format": "jodit"
    },
    "rectangle": {
      "type": "array",
      "title": "Rectangle",
      "format": "table",
      "items": {
        "type": "number"
      }
    },
    "zoomOnEnable": {
      "type": "boolean"
    },
    "isEnabled": {
      "type": "boolean"
    },
    "featureInfoTemplate": {
      "type": "string"
    },
    "tableStyle": {
      "title": "Table Style",
      "type": "object",
      "defaultProperties": [],
      "properties": {
        "columns": {
          "title": "Columns",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "defaultProperties": [],
            "properties": {
              "type": {
                "title": "Type of Column",
                "type": "string",
                "description": "The variable type of this column. Converts strings, which are case-insensitive keys of VarType, to numbers. The types include LON: 0, LAT: 1, ALT: 2, TIME: 3, SCALAR: 4, ENUM: 5, REGION: 6, TAG: 7, HIDDEN: 8, ADDR: 9"
              },
              "name": {
                "title": "Name",
                "type": "string",
                "description": "New column name to replace the original column name"
              },
              "format": {
                "title": "Format",
                "format": "json",
                "type": "string"
              },
              "units": {
                "title": "Units",
                "description": "The units of this column",
                "type": "string"
              },
              "legendName": {
                "title": "Name of Legend",
                "description": "Display name for the legend for this column (defaults to the column name).",
                "type": "string"
              },
              "legendTicks": {
                "title": "Legend Ticks",
                "description": "How many horizontal ticks to draw on the generated color ramp legend, not counting the top or bottom.",
                "type": "string"
              },
              "active": {
                "title": "Active",
                "description": "Is this column active?",
                "type": "boolean"
              },
              "colorBins": {
                "title": "Color Bins for Column",
                "description": "Either the number of discrete colours that a color gradient should be quantised into (ie. an integer), or an array of values specifying the boundaries between the color bins.",
                "oneOf": [
                  {
                    "type": "number",
                    "title": "Number"
                  },
                  {
                    "type": "array",
                    "title": "Value Interval",
                    "format": "table",
                    "items": {
                      "type": "number"
                    }
                  },
                  {
                    "type": "array",
                    "format": "table",
                    "title": "Value and Colors",
                    "items": {
                      "type": "object",
                      "required": [
                        "color",
                        "value"
                      ],
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string",
                          "format": "color"
                        }
                      }
                    }
                  }
                ]
              },
              "scale": {
                "title": "Scale",
                "description": "The size of each point or billboard.",
                "type": "number"
              },
              "scaleByValue": {
                "title": "Scale By Value",
                "description": "Should points and billboards representing each feature be scaled by the size of their data variable?",
                "type": "boolean"
              }
            }
          }
        },
        "dataVariable": {
          "title": "Data Variable",
          "type": "string",
          "description": "The name of the default variable (column) containing data to be used for scaling and coloring."
        },
        "colorPalette": {
          "title": "Color Palette",
          "type": "string",
          "enum": [
            "10-class BrBG",
            "10-class Set3",
            "9-class Set1",
            "Spectral"
          ],
          "format": "select"
        },
        "colorBins": {
          "title": "Color Bins for Resource",
          "type": "integer",
          "format": "select"
        },
        "colorBinMethod": {
          "title": "Color Bin Method",
          "description":"For numeric columns: 'auto' (default), 'ckmeans', 'quantile' or 'none' (equivalent to colorBins: 0). For enumerated columns: 'auto' (default), 'top', or 'cycle'",
          "type": "string",
          "enum": [
            "auto",
            "ckmeans",
            "cycle",
            "none",
            "quantile",
            "top"
          ]
        },
        "colorMap": {
          "title": "Color Map",
          "oneOf": [
            {
              "type": "string",
              "description": "red-white-hsl(240,50%,50%)",
              "title": "Name of Color Map"
            },
            {
              "type": "array",
              "format": "table",
              "title": "List of Color and Offset",
              "items": {
                "type": "object",
                "required": [
                  "color",
                  "offset"
                ],
                "properties": {
                  "offset": {
                    "type": "number"
                  },
                  "color": {
                    "type": "string",
                    "format": "color"
                  }
                }
              }
            }
          ]
        },
        "featureInfoFields": {
          "title": "Feature Information Fields",
          "description": "An object of { 'myCol': 'My column'} properties, defining which columns get displayed in feature info boxes (when clicked on), and what label is used instead of the column's actual name.",
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "imageUrl": {
          "title": "Image URL",
          "type": "string",
          "description": "imageUrl - A string representing an image to display at each point, for lat-long datasets."
        },
        "timeColumn": {
          "title": "Time Column",
          "description": "The column name or index to use as the time column. Defaults to the first one found. Pass null for none.",
          "type": "string"
        }
      }
    }
  },
  "title": "Comma-Separated Values (CSV)"
}