{
    "type": "object",
    "format": "grid-strict",
    "required": [
        "type",
        "id"
    ],
    "options": {
        "disable_collapse": true,
        "disable_edit_json": true,
        "disable_properties": true
    },
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "terriajs-view"
            ],
            "options": {
                "hidden": true,
                "grid_columns": 0
            }
        },
        "id": {
            "type": "string",
            "description": "Target Ckan terriajs view ID (autocomplete)",
            "format": "autocomplete",
            "minLength": 36,
            "options": {
                "autocomplete": {
                    "search": "view_search",
                    "getResultValue": "view_getValue",
                    "renderResult": "view_renderer",
                    "autoSelect": true
                },
                "grid_columns": 6
            }
        },
        "name": {
            "type": "string",
            "format": "string",
            "description": "Auto generated descriptive name",
            "watch": {
                "id": "terriajs-view.id"
            },
            "template": "view_template",
            "options": {
                "grid_columns": 6
            }
        }
    }
}