{
  "description":"This catalog item can be used to load a single catalog item from a remote source.",
  "type":"object",
  "format":"grid-strict",
  "required":[
      "type",
      "url",
      "name"
  ],
  "options":{
      "disable_collapse":true,
      "disable_edit_json":true,
      "disable_properties":true
  },
  "properties":{
      "type":{
          "type":"string",
          "enum":[
              "remote-config-item"
          ],
          "options":{
              "hidden":true,
              "grid_columns":0
          }
      },
      "name":{
          "type":"string",
          "minLength":1,
          "options":{
              "grid_columns":4
          }
      },
      "url":{
          "type":"string",
          "description":"The url to a Terriajs to lazily load (loaded on click)",
          "format":"autocomplete",
          "options":{
              "autocomplete": {
                  "search": "view_remoteItem_search",
                  "getResultValue": "view_remote_getValue",
                  "renderResult": "view_renderer",
                  "autoSelect": true,
                  "debounceTime": 500
              },
              "grid_columns":8
          }
      }
  }
}